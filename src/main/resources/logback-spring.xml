<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Utiliser les appenders console et file -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <!-- Configuration personnalisée pour l'appender de fichier -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender coloré pour la console -->
    <appender name="CONSOLE_COLOR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %green([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Niveaux de log par package -->
    <logger name="com.opencampus.devproject" level="DEBUG" />
    <logger name="org.springframework.web.client.RestTemplate" level="DEBUG" />
    
    <!-- Niveau par défaut pour le reste des loggers -->
    <root level="INFO">
        <appender-ref ref="CONSOLE_COLOR" />
        <appender-ref ref="FILE" />
    </root>
</configuration>